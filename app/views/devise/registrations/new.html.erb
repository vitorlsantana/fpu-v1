<div class="container">
  <div class="table-container">
    <h2>Registrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, label: "E-mail",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password, label: "Senha",
                    required: true,
                    hint: ("No mÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirme sua senha",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Registrar", class: "btn btn-flat" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
